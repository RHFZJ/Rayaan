<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="#d2f1f1f1"

    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textDirection="ltr"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/name"
        android:textColor="#000000"
        android:text="rajai marwan mousa abu saqer"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#eff2242b"
        android:id="@+id/text"
        android:textDirection="ltr"
        android:lineSpacingExtra="3dp"
        android:text="Hello Boyz, I want to tell you something about  last lecutre, I was So Confiused"/>
    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="10dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/dateTime"
        android:layout_height="wrap_content"
        android:text="12/12/2012 08:10:32"/>

</LinearLayout>