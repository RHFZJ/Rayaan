<?xml version="1.0" encoding="utf-8"?>

<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/white"

              android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".Admin.AdminMainActivity">

    <include layout="@layout/header" />

    <Button
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/daycare"
            android:text="الحضانات"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <Button
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/specialist"
            android:text="المختصين"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
        android:textColor="#FFF"
        android:background="@drawable/rec_gradient"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAllCaps="false"
        android:id="@+id/parent"
        android:text="الاباء"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:id="@+id/complaint"
            android:text="الشكاوى"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <Button
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:id="@+id/profile"
            android:text="صفحتي الشخصية"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <Button
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:id="@+id/password"
            android:text="تعديل كلمة المرور"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/logout"
            android:text="تسجيل الخروج"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>
