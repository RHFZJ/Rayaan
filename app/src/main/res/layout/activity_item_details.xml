<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimary"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="match_parent"
                                android:text="معلومات التواصل"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <TextView
                        android:text="الاسم"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/name"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:textColor="@android:color/black"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:text="رقم الموبايل"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:autoLink="phone"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:text="البريد الالكتروني"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:textColor="@android:color/black"
                        android:autoLink="email"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                            android:text="السعر"
                            android:id="@+id/price2"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:id="@+id/price"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:textColor="@android:color/black"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    <Button
                        android:textColor="#FFF"
                        android:background="@drawable/rec_gradient"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:drawableTint="@color/white"
                        android:paddingRight="40dp"
                        android:drawableRight="@android:drawable/sym_action_chat"
                        android:id="@+id/chat"
                        android:text="محادثة"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />


                    <Button
                            android:textColor="#FFF"
                            android:background="@drawable/rec_gradient"
                            android:layout_marginTop="20dp"
                            android:textAllCaps="false"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:drawableTint="@color/white"
                            android:paddingRight="40dp"
                            android:drawableRight="@drawable/location"
                            android:id="@+id/location"
                            android:text="الموقع"
                            android:layout_width="match_parent"
                            android:layout_height="45dp" />



                    <Button
                        android:textColor="#FFF"
                        android:background="@drawable/rec_gradient"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:drawableTint="@color/white"
                        android:paddingRight="40dp"
                        android:id="@+id/worker"
                        android:text="الموظفين"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />


                    <Button
                        android:textColor="#FFF"
                        android:background="@drawable/rec_gradient"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:drawableTint="@color/white"
                        android:paddingRight="40dp"
                        android:id="@+id/ads"
                        android:text="الاعلانات"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimary"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="match_parent"
                                android:text="ساعات العمل"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:id="@+id/recycler_view"
                            android:layout_height="wrap_content"/>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimary"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="match_parent"
                                android:text="الشهادات"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:id="@+id/recycler_view2"
                            android:layout_height="wrap_content"/>



                </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/background_white"
        android:padding="5dp"
        android:layout_width="130dp"
        android:layout_height="130dp" />


</RelativeLayout>